 */
const VALID_SPECTRAL_CLASS_VALUES = [
    {class: "O", tempmin: 30000, tempmax: 60000, massmin: 16, massmax: Infinity},
    {class: "B", tempmin: 10000, tempmax: 30000, massmin: 2.1, massmax: 16},
